CC = g++
CFLAGS = -g -w
OBJS = main.o game.o ltexture.o map.o ltimer.o
LINKER_FLAGS = -lSDL2 -lSDL2_image 
EXEC = main

.SUFFIXES:.cpp .o

all: ${EXEC}

${EXEC}: ${OBJ}
	${CC} -o ${EXEC} ${OBJS}

main.o: main.cpp
game.o: game.cpp game.h
ltexture.o: ltexture.cpp ltexture.h
dot.o: dot.cpp dot.h
ltimer.o: ltimer.cpp ltimer.h

.cpp.o:
	${CC} ${CFLAGS} -c $<

clean:
	rm -f ${OBJS} ${EXEC}
